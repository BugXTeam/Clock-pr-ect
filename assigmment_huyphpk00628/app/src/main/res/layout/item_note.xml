<?xml version="1.0"
    encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    android:background="@drawable/selector_listview_one"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="5.0dip"
        android:paddingBottom="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_marginLeft="10.0dip"
            android:src="@drawable/calendar"
            android:contentDescription="@string/ContentDescriptionImageNull"
            android:id="@+id/imageview_calendar" />
        <LinearLayout android:orientation="vertical"
            android:layout_width="100dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            >

            <TextView android:id="@+id/txtweekdays1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/TextViewCurrentAccountBlue"
                android:text="Thứ sáu" />
            <TextView android:id="@+id/txtDate1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/FormEditTitle"
                android:text="2016/12/12" />
        </LinearLayout>

        <LinearLayout android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="40dp"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/txtweekdays"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#e204ff"
                android:text="Thu:fdfsd" />
            <TextView android:id="@+id/txtDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/FormEditValue"
                android:text="chi" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_marginTop="23dp"
        android:layout_width="30dp"
        android:layout_marginLeft="24dp"
        android:textSize="18dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="31"
        android:id="@+id/textView4" />
</RelativeLayout>