<?xml version="1.0"
    encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/layerAddChi"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:background="@color/BarHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="49.0dip">
            <TextView android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/btnBack"
                android:background="@drawable/selector_button_back"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:layout_width="wrap_content"
                android:layout_height="50.0dip"
                android:minWidth="50.0dip"
                android:text="@string/Cancel"
                style="@style/TextHeaderAction"
                />
            <TextView android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/txtformname"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:maxHeight="49.0dip"
                android:text="Thêm giao dịch"
                android:layout_weight="1.0"
                style="@style/TextHeader"
                />
            <Button android:textColor="@color/white"
                android:id="@+id/btnSave"
                android:background="@drawable/selector_button_save_gray"
                android:layout_width="50.0dip"
                android:layout_height="30.0dip"
                android:layout_marginRight="10.0dip"
                android:text="@string/Save"
                style="@style/TextHeaderAction"
                android:layout_weight="0.08" />
        </LinearLayout>
    </ScrollView>

    <ScrollView android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="10.0dip">
            <LinearLayout android:orientation="horizontal"
                android:id="@+id/lnSelectCaculator"
                android:background="@drawable/customeditmoney"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip">
                <TextView android:gravity="center|right"
                    android:id="@+id/txtTransactionAmount"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_margin="5.0dip"
                    android:singleLine="true"
                    android:layout_weight="1.0"
                    style="@style/InputMoneyKeyboard"
                    />
                <Button android:textSize="20.0sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/btnSymbol"
                    android:background="@drawable/selector_common_gray"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="5.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="40.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginRight="5.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:minWidth="40.0dip"
                    />
            </LinearLayout>
            <LinearLayout android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:layout_marginBottom="10.0dip">
                <LinearLayout android:orientation="vertical"
                    android:background="@drawable/customeditmoney"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginRight="10.0dip">
                    <LinearLayout android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/lnSelectCategory"
                        android:background="@drawable/selector_listview_one"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginTop="1.0dip"
                        android:layout_marginRight="2.0dip">
                        <TextView android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:text="@string/ExpenseFor"
                            style="@style/FormEditTitle"
                            />
                        <TextView android:gravity="center|right"
                            android:id="@+id/txtExpenseType"
                            android:clickable="false"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginTop="5.0dip"
                            android:layout_marginRight="5.0dip"
                            android:layout_marginBottom="5.0dip"
                            android:minHeight="44.0dip"
                            android:layout_weight="1.0"
                            style="@style/FormEditValue"
                            />
                        <ImageView android:layout_gravity="center_vertical"
                            android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5.0dip"
                            android:src="@drawable/disclosure"
                            android:contentDescription="@string/NoImage"
                            />
                    </LinearLayout>
                    <View android:id="@+id/lnRelation"
                        android:background="@color/Line"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:layout_marginLeft="1.0dip"
                        android:layout_marginRight="1.0dip"
                        />
                    <LinearLayout android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/lnSelectRelation"
                        android:background="@drawable/selector_listview_one"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip">
                        <TextView android:id="@+id/txtRelationTitle"
                            android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:text="@string/Lender"
                            style="@style/FormEditTitle"
                            />
                        <TextView android:gravity="center|right"
                            android:id="@+id/txtRelation"
                            android:clickable="false"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginTop="5.0dip"
                            android:layout_marginRight="5.0dip"
                            android:layout_marginBottom="5.0dip"
                            android:minHeight="44.0dip"
                            android:singleLine="true"
                            android:layout_weight="1.0"
                            style="@style/FormEditValue"
                            />
                        <ImageView android:layout_gravity="center_vertical"
                            android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5.0dip"
                            android:src="@drawable/disclosure"
                            android:contentDescription="@string/NoImage"
                            />
                    </LinearLayout>
                    <View android:background="@color/Line"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:layout_marginLeft="1.0dip"
                        android:layout_marginRight="1.0dip"
                        />
                    <LinearLayout android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/lnDescription"
                        android:background="@drawable/selector_listview_one"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:layout_marginBottom="1.0dip">
                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:text="@string/Description"
                            style="@style/FormEditTitle"
                            />
                        <TextView android:gravity="center|right"
                            android:id="@+id/txtDescription"
                            android:clickable="false"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginTop="5.0dip"
                            android:layout_marginRight="5.0dip"
                            android:layout_marginBottom="5.0dip"
                            android:minHeight="44.0dip"
                            android:singleLine="true"
                            android:layout_weight="1.0"
                            style="@style/FormEditValue"
                            />
                        <ImageView android:layout_gravity="center_vertical"
                            android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5.0dip"
                            android:src="@drawable/disclosure"
                            android:contentDescription="@string/NoImage"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:orientation="vertical"
                    android:background="@drawable/customeditmoney"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginRight="10.0dip">

                    <View android:background="@color/Line"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:layout_marginLeft="1.0dip"
                        android:layout_marginRight="1.0dip"
                        />

                    <LinearLayout android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/lnSelectAccount"
                        android:background="@drawable/selector_listview_one"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginTop="1.0dip"
                        android:layout_marginRight="2.0dip">
                        <TextView android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:text="@string/AccountFrom"
                            style="@style/FormEditTitle"
                            />
                        <TextView android:gravity="center|right"
                            android:id="@+id/txtAccountName"
                            android:clickable="false"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginTop="5.0dip"
                            android:layout_marginRight="5.0dip"
                            android:layout_marginBottom="5.0dip"
                            android:minHeight="44.0dip"
                            android:layout_weight="1.0"
                            style="@style/FormEditValue"
                            />
                        <ImageView android:layout_gravity="center_vertical"
                            android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5.0dip"
                            android:src="@drawable/disclosure"
                            android:contentDescription="@string/NoImage"
                            />
                    </LinearLayout>

                    <LinearLayout android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/lnSelectDate"
                        android:background="@drawable/selector_listview_one"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:layout_marginBottom="1.0dip">
                        <TextView android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:text="@string/Date"
                            style="@style/FormEditTitle"
                            />
                        <TextView android:gravity="center|right"
                            android:id="@+id/txtDate"
                            android:clickable="false"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginTop="5.0dip"
                            android:layout_marginRight="5.0dip"
                            android:layout_marginBottom="5.0dip"
                            android:minHeight="44.0dip"
                            android:layout_weight="1.0"
                            style="@style/FormEditValue"
                            />
                        <ImageView android:layout_gravity="center_vertical"
                            android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5.0dip"
                            android:src="@drawable/disclosure"
                            android:contentDescription="@string/NoImage"
                            />
                    </LinearLayout>
                    <View android:id="@+id/vExpenseFor"
                        android:background="@color/Line"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:layout_marginLeft="1.0dip"
                        android:layout_marginRight="1.0dip"
                        />
                    <LinearLayout android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/lnExpenseFor"
                        android:background="@drawable/selector_listview_one"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:layout_marginBottom="1.0dip">
                        <TextView android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:text="@string/ExpenseForOrther"
                            style="@style/FormEditTitle"
                            />
                        <TextView android:gravity="center|right"
                            android:id="@+id/txtExpenseFor"
                            android:clickable="false"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginTop="5.0dip"
                            android:layout_marginRight="5.0dip"
                            android:layout_marginBottom="5.0dip"
                            android:minHeight="44.0dip"
                            android:singleLine="true"
                            android:layout_weight="1.0"
                            style="@style/FormEditValue"
                            />
                        <ImageView android:layout_gravity="center_vertical"
                            android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5.0dip"
                            android:src="@drawable/disclosure"
                            android:contentDescription="@string/NoImage"
                            />
                    </LinearLayout>
                    <View android:id="@+id/vEvent"
                        android:background="@color/Line"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:layout_marginLeft="1.0dip"
                        android:layout_marginRight="1.0dip"
                        />
                    <LinearLayout android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/lnEvent"
                        android:background="@drawable/selector_listview_one"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:layout_marginBottom="1.0dip">
                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:text="@string/EventTitle"
                            style="@style/FormEditTitle"
                            />
                        <TextView android:gravity="center|right"
                            android:id="@+id/txtEventName"
                            android:clickable="false"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginTop="5.0dip"
                            android:layout_marginRight="5.0dip"
                            android:layout_marginBottom="5.0dip"
                            android:minHeight="44.0dip"
                            android:hint="@string/Event"
                            android:singleLine="true"
                            android:layout_weight="1.0"
                            style="@style/FormEditValue"
                            />
                        <ImageView android:id="@+id/imgDeleteEvent"
                            android:paddingTop="10.0dip"
                            android:paddingBottom="10.0dip"
                            android:visibility="gone"
                            android:layout_width="26.0dip"
                            android:layout_height="46.0dip"
                            android:layout_marginRight="5.0dip"
                            android:src="@drawable/clearedit"
                            android:contentDescription="@string/NoImage"
                            />
                    </LinearLayout>
                </LinearLayout>
                <CheckBox android:layout_gravity="left"
                    android:id="@+id/cbLender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="10.0dip"
                    android:text="@string/ExpenseFromBorrowTitel"
                    style="@style/FormEditTitle"
                    />
                <LinearLayout android:orientation="vertical"
                    android:id="@+id/lnLender"
                    android:background="@drawable/customeditmoney"
                    android:visibility="gone"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip">
                    <LinearLayout android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:background="@drawable/selector_listview_one"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginTop="1.0dip"
                        android:layout_marginRight="2.0dip"
                        android:layout_marginBottom="1.0dip">
                        <TextView android:id="@+id/txtLenderTitle"
                            android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:text="@string/Lender"
                            style="@style/FormEditTitle"
                            />
                        <TextView android:gravity="center|right"
                            android:id="@+id/txtLender"
                            android:clickable="false"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginTop="5.0dip"
                            android:layout_marginRight="5.0dip"
                            android:layout_marginBottom="5.0dip"
                            android:minHeight="44.0dip"
                            android:layout_weight="1.0"
                            style="@style/FormEditValue"
                            />
                        <ImageView android:layout_gravity="center_vertical"
                            android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5.0dip"
                            android:src="@drawable/disclosure"
                            android:contentDescription="@string/NoImage"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:gravity="center"
                android:id="@+id/lnAddAndNew"
                android:background="@drawable/selector_button_green"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_margin="10.0dip"
                android:layout_weight="1.0">
                <ImageView android:layout_width="25.0dip"
                    android:layout_height="20.0dip"
                    android:src="@drawable/save_icon_button"
                    android:contentDescription="@string/NoImage"
                    />
                <TextView android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/SaveAndNew"
                    style="@style/TextViewStyle"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>





